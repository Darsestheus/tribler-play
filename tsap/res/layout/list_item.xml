<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="6dip" 
    android:descendantFocusability="blocksDescendants">

    <CheckBox
        android:id="@+id/favoritetoggle"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="6dip"
 		android:button="@drawable/star_toggle"/>
    
    <TextView
        android:id="@+id/channelname"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toRightOf="@id/favoritetoggle"
        android:gravity="center_vertical"
        android:textSize="18sp"
        android:text="blabla"/>

    <TextView
        android:id="@+id/torrentamount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/favoritetoggle"
        android:layout_marginRight="6dip"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="torrents: 156"
        android:textSize="13sp"/>
	
    <TextView
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/torrentamount"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="rating: "
        android:textSize="13sp" />
    <ImageView
        android:id="@+id/firststar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/rating"
		android:src="@drawable/rating_star_selected"/>
    <ImageView
        android:id="@+id/secondstar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/firststar"
		android:src="@drawable/rating_star_selected"/>
    <ImageView
        android:id="@+id/thirdstar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/secondstar"
		android:src="@drawable/rating_star_selected"/>
    <ImageView
        android:id="@+id/fourthstar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/thirdstar"
		android:src="@drawable/rating_star_selected"/>
    <ImageView
        android:id="@+id/fifthstar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/fourthstar"
		android:src="@drawable/rating_star_not_selected"/>
</RelativeLayout> 