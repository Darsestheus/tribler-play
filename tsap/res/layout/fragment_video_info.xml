<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp" >

    <TextView
        android:id="@+id/video_info_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingBottom="10dp"
        android:text="@string/video_info_title"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/video_info_details_titles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/video_info_title"
        android:orientation="vertical"
        android:paddingRight="10dp" >

        <TextView
            android:id="@+id/video_details_type_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/video_details_type"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/video_details_upload_date_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/video_details_upload_date"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/video_details_filesize_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/video_details_filesize"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/video_details_health_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/video_details_health"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/video_info_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/video_info_title"
        android:layout_toRightOf="@id/video_info_details_titles"
        android:orientation="vertical"
        android:paddingRight="10dp" >

        <TextView
            android:id="@+id/video_details_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/video_details_type_example"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/video_details_upload_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/video_details_upload_date_example"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/video_details_filesize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/video_details_filesize_example"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/video_details_health"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/video_details_health_example"
            android:textSize="15sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/video_info_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/video_info_title"
        android:layout_toRightOf="@id/video_info_details"
        android:contentDescription="@string/sintel_thumbnail_descr"
        android:src="@drawable/sintel_thumbnail" />

</RelativeLayout>