<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/video_info_fragment_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp" >

        <TextView
            android:id="@+id/video_info_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:ellipsize="end"
            android:paddingBottom="15dp"
            android:singleLine="true"
            android:text="@string/video_info_title"
            android:textSize="23sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/video_info_details_titles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/video_info_title"
            android:orientation="vertical"
            android:paddingRight="10dp" >

            <TextView
                android:id="@+id/video_details_type_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/video_details_type"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/video_details_upload_date_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/video_details_upload_date"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/video_details_filesize_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/video_details_filesize"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/video_details_seeders_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/video_details_seeders"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/video_details_leechers_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/video_details_leechers"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/video_info_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/video_info_title"
            android:layout_toRightOf="@id/video_info_details_titles"
            android:orientation="vertical"
            android:paddingRight="10dp" >

            <TextView
                android:id="@+id/video_details_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/video_details_type_example"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/video_details_upload_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/video_details_upload_date_example"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/video_details_filesize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/video_details_filesize_example"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/video_details_seeders"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/video_details_seeders_example"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/video_details_leechers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/video_details_leechers_example"
                android:textSize="18sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/video_info_thumbnail"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/video_info_title"
            android:layout_toRightOf="@id/video_info_details"
            android:contentDescription="@string/sintel_thumbnail_descr"
            android:src="@drawable/default_thumb" />

        <Button
            android:id="@+id/video_info_stream_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/video_info_thumbnail"
            android:layout_marginTop="10dp"
            android:text="@string/video_info_stream_button" />

        <Button
            android:id="@+id/video_info_download_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/video_info_stream_video"
            android:text="@string/video_info_download_button" />

        <TextView
            android:id="@+id/video_info_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/video_info_download_video"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="@string/video_details_description_example"
            android:textSize="18sp" />
    </RelativeLayout>

</ScrollView>